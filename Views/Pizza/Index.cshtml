@model List<Pizza>

<body style="margin:0;" padding="0;" box-sizin="border-box;">
    <section >
        <div class="container">
            <div>
                @if (Model.Count > 0)
                {
                    @foreach (Pizza pizza in Model)
                    {
                        <div>
                            <div>
                            
                                <img style="width:50px;"  src="@pizza.Photo" alt="@pizza.Name" />
                                <a href="@Url.Action("Show","Pizza", new{ Id = pizza.Id})">
                                    <h3>@pizza.Name</h3>
                                </a>
                                <span>Price : @pizza.Price $</span>
                                <p> Description: <small>@pizza.Description</small></p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h2>The menu is empty</h2>
                }
            </div>
        </div>
    </section>
</body>